<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  
  <% if user_signed_in? %>
      <%= f.submit 'Sign out' %>
  <% elsif %>
      <%= f.submit 'Sign in' %>
  <% end %>
  
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>