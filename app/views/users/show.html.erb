            <%= hotel.name %>
            <%#= link_to(hotel.name, hotel.name)%>
            <%= link_to(hotel.name, hotel)%>
            <%= hotel %>
            </p>
            
        <% end %>
        
        <%= @user_hotel_name %>

        <%= @user_hotel_id %>
    <% end %>



