
<h1>Show User(show.html.erb)</h1>

    
    <p>Name:           <%= @user.name %> </p>
    <p>Email:          <%= @user.email %></p>
    <p>Headline:       <%= @user.headline %></p>
    <p>Profile:        <%= @user.profile %></p>
    <p>Admin:          <%= @user.admin %></p>



    <% if(@user == current_user) %>
        <h2>Edit User</h2>
        <p><%= link_to("Edit This User", edit_user_path ) %> </p>
    <% end %>


<h2>Delete User</h2>
<p><%#= link_to("Delete This User", user_path, method: :delete, data: {confirm: "Are you sure that you want to delete this user?" ) %></p>


<p>     <%= params[:id] %>    </p>
